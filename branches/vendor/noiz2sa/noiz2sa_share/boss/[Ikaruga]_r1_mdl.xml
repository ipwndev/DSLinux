<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "http://www.asahi-net.or.jp/~cs8k-cyu/bulletml/bulletml.dtd">

<bulletml type="vertical"
          xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

<action label="top">
 <repeat> <times>2</times>
 <action>
  <fire>
   <direction type="aim">-60</direction>
   <bulletRef label="arc"/>
  </fire>
  <repeat> <times>4</times>
  <action>
   <fire>
    <direction type="sequence">30</direction>
    <bulletRef label="arc"/>
   </fire>
  </action>
  </repeat> 
  <wait>90</wait>
 </action>
 </repeat>

 <fire>
  <direction type="aim">-60</direction>
  <speed type="absolute">0.9</speed>
  <bullet/>
 </fire>
 <repeat> <times>4</times>
 <action>
  <fire>
   <direction type="sequence">30</direction>
   <speed type="sequence">0</speed>
   <bullet/>
  </fire>
 </action>
 </repeat>
 <wait>4</wait>
 <repeat> <times>1+$rank*7</times>
  <action>
  <fire>
   <direction type="aim">-60</direction>
   <speed type="sequence">0.3</speed>
   <bullet/>
  </fire>
  <repeat> <times>4</times>
  <action>
   <fire>
    <direction type="sequence">30</direction>
    <speed type="sequence">0</speed>
    <bullet/>
   </fire>
  </action>
  </repeat>
  <wait>4</wait>
 </action>
 </repeat>
 <wait>90</wait>
 <vanish/>
</action>

<bullet label="arc">
 <action>
  <fire>
   <direction type="relative">-5-$rank*10</direction>
   <bulletRef label="nml"/>
  </fire>
  <repeat> <times>2+$rank*6</times>
  <action>
   <fire>
    <direction type="sequence">2.5</direction>
    <bulletRef label="nml"/>
   </fire>
  </action>
  </repeat>
 <vanish/>
 </action>
</bullet>

<bullet label="nml">
 <speed>0.9</speed>
</bullet>

</bulletml>
