<action label="roll">
 <fire>
  <direction type="absolute">$1</direction>
  <bulletRef label="red"/>
 </fire>
 <repeat> <times>10+$rank*40</times>
 <action>
  <wait>200/(10+$rank*40)</wait>
  <fire>
   <direction type="sequence">$2*(6-$rank*4)</direction>
   <bulletRef label="red"/>
  </fire>
