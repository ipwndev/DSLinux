testaddch$x: $(MODEL)/testaddch$o $(LOCAL_LIBS)
	@ECHO_LINK@ $(LINK) -o $@ $(MODEL)/testaddch$o $(LDFLAGS_CURSES)

testcurs$x: $(MODEL)/testcurs$o $(LOCAL_LIBS)
