set -e

if [ "$1" = "-p" ]; then
    scorefile="@install_prefix@$2"
    perms=@vardata_perms_priv@
else
    scorefile="@install_prefix@$1"
    perms=@vardata_perms@
fi

mkdir -p "$(dirname "$scorefile")"

test -e "$scorefile" || touch "$scorefile"
if [ @do_chown@ = y ]; then
    chown @vardata_owner@:@vardata_group@ "$scorefile"
fi
chmod "$perms" "$scorefile"
