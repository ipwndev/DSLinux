<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "http://www.asahi-net.or.jp/~cs8k-cyu/bulletml/bulletml.dtd">

<bulletml type="vertical"
          xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

<action label="topmove">
<changeSpeed>
 <speed>0.3</speed>
 <term>1</term>
</changeSpeed>
</action>

<action label="topshot">
 <repeat> <times>2</times>
  <action> 
   <fire>
    <direction type="absolute">45</direction>
    <bulletRef label="seed"/>
   </fire>
   <fire>
    <direction type="absolute">135</direction>
    <bulletRef label="seed"/>
   </fire>
   <fire>
    <direction type="absolute">225</direction>
    <bulletRef label="seed"/>
   </fire>
   <fire>
    <direction type="absolute">315</direction>
    <bulletRef label="seed"/>
   </fire>
   <wait>80</wait>
  </action>
 </repeat>
</action>

<bullet label="seed">
 <speed>3.6</speed>
 <action>
  <repeat> <times>1+$rank*5</times>
  <action>
   <wait>1</wait>
   <fire>
    <speed>0.7</speed>
    <bullet/>
   </fire>
  </action>
  </repeat>
  <vanish/>
 </action>
</bullet>

</bulletml>
