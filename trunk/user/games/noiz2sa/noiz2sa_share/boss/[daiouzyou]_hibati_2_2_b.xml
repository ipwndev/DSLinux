<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "http://www.asahi-net.or.jp/~cs8k-cyu/bulletml/bulletml.dtd">

<bulletml type="vertical"
          xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

<action label="topblue">
 <fire>
  <speed>0</speed>
  <bulletRef label="blueseed1"/>
 </fire>
 <fire>
  <speed>0</speed>
  <bulletRef label="blueseed2"/>
 </fire>
 <fire>
  <speed>0</speed>
  <bulletRef label="blueseed3"/>
 </fire>
 <fire>
  <speed>0</speed>
  <bulletRef label="blueseed4"/>
 </fire>
 <wait>200</wait>
 <vanish/>
</action>

<bullet label="blueseed1">
<action>
 <actionRef label="blueroll">
  <param>0</param>
  <param>24</param>
 </actionRef>
</action>
</bullet>

<bullet label="blueseed2">
<action>
 <actionRef label="blueroll">
  <param>90</param>
  <param>27</param>
 </actionRef>
</action>
</bullet>

<bullet label="blueseed3">
<action>
 <actionRef label="blueroll">
  <param>180</param>
  <param>30</param>
 </actionRef>
</action>
</bullet>

<bullet label="blueseed4">
<action>
 <actionRef label="blueroll">
  <param>270</param>
  <param>33</param>
 </actionRef>
</action>
</bullet>

<action label="blueroll">
 <fire>
  <direction type="absolute">$1</direction>
  <bulletRef label="blue"/>
 </fire>
 <repeat> <times>16+$rank*50</times>
 <action>
  <wait>132/(16+$rank*50)</wait>
  <fire>
   <direction type="sequence">$2</direction>
   <bulletRef label="blue"/>
  </fire>
 </action>
 </repeat>
<vanish/>
</action>

<bullet label="blue">
 <speed>1.0</speed>
 <action>
  <changeDirection>
   <direction type="sequence">0.5</direction>
   <term>9999</term>
  </changeDirection>
 </action>
</bullet>

</bulletml>
