<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "http://www.asahi-net.or.jp/~cs8k-cyu/bulletml/bulletml.dtd">

<bulletml type="vertical"
          xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

<action label="top">
<actionRef label="nway">
<param>24</param>
</actionRef>
<actionRef label="nway">
<param>-24</param>
</actionRef>
<wait>100</wait>
<vanish/>
</action>

<action label="nway">
<fire>
<direction>$1</direction>
<bulletRef label="seed"/>
</fire>
<repeat>
<times>$rank*4</times>
<action>
<fire>
<direction type="sequence">$1/2</direction>
<bulletRef label="seed"/>
</fire>
</action>
</repeat>
</action>

<bullet label="seed">
<speed>1.8</speed>
<action>
<repeat>
<times>99</times>
<action>
<wait>15-$rank*6</wait>
<fire>
<bulletRef label="accl"/>
</fire>
</action>
</repeat>
</action>
</bullet>

<bullet label="accl">
<speed>0</speed>
<action>
<changeSpeed>
<speed>1</speed>
<term>60</term>
</changeSpeed>
</action>
</bullet>

</bulletml>
