<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "http://www.asahi-net.or.jp/~cs8k-cyu/bulletml/bulletml.dtd">

<bulletml type="vertical"
          xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

<action label="top">
<repeat>
<times>5</times>
<action>
<changeDirection>
<direction type="absolute">$rand*360</direction>
<term>10</term>
</changeDirection>
<changeSpeed>
<speed>1</speed>
<term>15</term>
</changeSpeed>
<wait>10+$rand*30</wait>
<changeSpeed>
<speed>0</speed>
<term>10</term>
</changeSpeed>
<wait>20+$rand*40</wait>
</action>
</repeat>
<vanish/>
</action>

<action label="topfire">
<repeat>
<times>99</times>
<action>
<fire>
<bullet>
<speed>0.8</speed>
</bullet>
</fire>
<wait>45-$rank*30</wait>
</action>
</repeat>
</action>

</bulletml>
