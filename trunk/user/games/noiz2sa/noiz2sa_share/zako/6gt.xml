<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "http://www.asahi-net.or.jp/~cs8k-cyu/bulletml/bulletml.dtd">

<bulletml type="vertical"
          xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

<action label="topmove">
 <changeDirection>
  <direction type="absolute">$rand*40+160</direction>
  <term>1</term>
 </changeDirection>
 <changeSpeed>
  <speed>0.7</speed>
  <term>1</term>
 </changeSpeed>
 <wait>1</wait>
 <changeSpeed>
  <speed>0</speed>
  <term>80</term>
 </changeSpeed>
 <wait>180</wait>
 <changeSpeed>
  <speed>-1.5</speed>
  <term>90</term>
 </changeSpeed>
</action>

<action label="topshot">
 <repeat> <times>2</times>
 <action>
  <fire>
   <bulletRef label="root"/>
  </fire>
  <wait>72</wait>
 </action>
 </repeat>
</action>

<bullet label="root">
 <speed>0.5</speed>
 <action>
  <fire>
   <bullet>
    <actionRef label="ofs">
     <param>0</param>
    </actionRef>
   </bullet>
  </fire>
  <fire>
   <bullet>
    <actionRef label="ofs">
     <param>60</param>
    </actionRef>
   </bullet>
  </fire>
  <fire>
   <bullet>
    <actionRef label="ofs">
     <param>120</param>
    </actionRef>
   </bullet>
  </fire>
  <fire>
   <bullet>
    <actionRef label="ofs">
     <param>-60</param>
    </actionRef>
   </bullet>
  </fire>
  <fire>
   <bullet>
    <actionRef label="ofs">
     <param>-120</param>
    </actionRef>
   </bullet>
  </fire>
 </action>
</bullet>

<action label="ofs">
  <changeSpeed>
   <speed>0.5+$rank*2</speed>
   <term>1</term>
  </changeSpeed>
  <changeDirection>
   <direction type="relative">$1</direction>
   <term>5</term>
  </changeDirection>
  <wait>5</wait>
  <changeDirection>
   <direction type="relative">0-$1</direction>
   <term>5</term>
  </changeDirection>
  <changeSpeed>
   <speed>0.5</speed>
   <term>1</term>
  </changeSpeed>
  <wait>5</wait>
</action>

</bulletml>
