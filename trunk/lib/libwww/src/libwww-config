#!/bin/sh
# (c) COPYRIGHT MIT 1995.
# Please first read the full copyright statement in the file COPYRIGH.
# @(#) $Id: libwww-config.in,v 1.6 1999/06/23 18:05:01 frystyk Exp $
#
# Thanks to Soren Sandmann for providing first version of this script!

prefix=THEROOTDIR
exec_prefix=${prefix}
exec_prefix_set=no

usage="\
Usage: libwww-config [--prefix[=DIR]] [--exec-prefix[=DIR]] [--version]
[--libs] [--cflags]"

if test $# -eq 0; then
      echo "${usage}" 1>&2
      exit 1
fi

while test $# -gt 0; do
  case "$1" in
  -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
  *) optarg= ;;
  esac

  case $1 in
    --prefix=*)
      prefix=$optarg
      if test $exec_prefix_set = no ; then
        exec_prefix=$optarg
      fi
      ;;
    --prefix)
      echo $prefix
      ;;
    --exec-prefix=*)
      exec_prefix=$optarg
      exec_prefix_set=yes
      ;;
    --exec-prefix)
      echo $exec_prefix
      ;;
    --version)
      echo 5.4.0
      ;;
    --cflags)
      echo -I${prefix}/include -I${prefix}/include/w3c-libwww -DHAVE_CONFIG_H
      ;;
    --libs)
      echo -L${exec_prefix}/lib     -lwwwinit -lwwwapp -lwwwhtml -lwwwtelnet -lwwwnews -lwwwhttp -lwwwmime -lwwwgopher -lwwwftp -lwwwfile -lwwwdir -lwwwcache -lwwwstream -lwwwmux -lwwwtrans -lwwwcore -lwwwutils -lmd5 
      ;;
    *)
      echo "${usage}" 1>&2
      exit 1
      ;;
  esac
  shift
done
