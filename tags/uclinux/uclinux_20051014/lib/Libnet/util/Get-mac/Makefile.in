CC          =   @CC@
CFLAGS      =   @CFLAGS@
OBJECTS     =   get_mac.o
DEFINES     +=  @DEFS@
LIBS        =   -L../lib/ -lnet @ADDITIONAL_LIBS@

.c.o:
	$(CC) $(CFLAGS) $(DEFINES) -c $< -o $@

all: 	get_mac

get_mac: $(OBJECTS)
	$(CC) get_mac.o $(LIBS) -lpcap -o ./get_mac

clean:
	rm -f *.core get_mac *.o

distclean: clean
	rm -f Makefile

