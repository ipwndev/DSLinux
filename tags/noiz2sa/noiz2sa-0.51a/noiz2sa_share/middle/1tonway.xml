<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "http://www.asahi-net.or.jp/~cs8k-cyu/bulletml/bulletml.dtd">

<bulletml type="vertical"
          xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

<action label="topmove">
<changeSpeed>
<speed>0.2</speed>
<term>1</term>
</changeSpeed>
</action>

<action label="topshot">
<repeat>
<times>1+$rank*2.5</times>
<action>
<fire>
<bullet>
<speed>0</speed>
<action>
<actionRef label="seed"/>
</action>
</bullet>
</fire>
<wait>60-$rank*12</wait>
</action>
</repeat>
</action>

<action label="seed">
<actionRef label="way">
<param>2</param>
</actionRef>
<wait>4</wait>
<actionRef label="way">
<param>3</param>
</actionRef>
<wait>4</wait>
<actionRef label="way">
<param>4</param>
</actionRef>
<wait>4</wait>
<actionRef label="way">
<param>5</param>
</actionRef>
<vanish/>
</action>
<action label="way">
<fire>
<direction type="relative">($1-1)*12/2</direction>
<bullet label="nrm"/>
</fire>
<repeat>
<times>$1-1</times>
<action>
<fire>
<direction type="sequence">-12</direction>
<bullet label="nrm"/>
</fire>
</action>
</repeat>
</action>
<bullet label="nrm">
<speed>0.6+$rank*0.2</speed>
</bullet>

</bulletml>
